<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".view.retail_salesman.fragment.RegisterCustomerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Please fill all required field."
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_work_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_work_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Work Field"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/spinner_since"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="10dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Owner Name"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_no_ktp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_no_ktp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="KTP"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_npwp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_npwp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NPWP/PKP"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Address"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/spinner_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_spinner"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Phone"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/spinner_customer_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="10dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_owner_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_owner_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Owner Address"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_recommended_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginBottom="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_recommended_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recommended by"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Customer\'s Shop Image: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/customer_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_border_radius"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bg_button_universal"
            android:minHeight="30dp"
            android:text="Upload"
            android:textColor="@color/colorTextWhite"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Owner\'s KTP: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/owner_ktp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_border_radius"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bg_button_universal"
            android:minHeight="30dp"
            android:text="Upload"
            android:textColor="@color/colorTextWhite"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Supplier: "
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />


    </LinearLayout>

</ScrollView>